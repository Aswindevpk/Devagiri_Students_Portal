<!-- carousel section  -->
<div class="container">
  <h2 class="section-header text-center mb-3">CAROUSAL IMAGES</h2>


  <div class="justify-content-center text-center">
    <div class="mb-3 col-12">
      <img class="col-6 mb-3" src="../carousel/sample_carousal.png" id="selectedImageCarousal" class="img-fluid"
        style="width: 200px;">
      <form action="/admin/add-carousal" method="post" enctype="multipart/form-data">
        <div class="row">
          <div class="col-6">
            <input class="form-control" type="file" name="image" id="imageInputCarousal">
          </div>
          <div class="col-6">
            <button type="submit" class="btn btn-primary">Upload Image</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <div class="container">
    <div class="row">
      {{#each carousal_arr}}
      <div class="col-3 text-center">
        <img class="mb-2" src="../carousel/{{this}}.jpg" alt="" style="width:100%;">
        <br>
        <a href="/admin/delete-carousal/{{this}}" class="btn btn-sm btn-danger"
          onclick="return confirm('Are you really want to remove ?')">remove</a>
      </div>
      {{/each}}
    </div>
  </div>
</div>


<script>
  const input = document.getElementById("imageInputCarousal");
  const selectedImage = document.getElementById("selectedImageCarousal");

  input.addEventListener("change", function () {
    const reader = new FileReader();
    reader.onload = function () {
      selectedImage.src = reader.result;
    }
    reader.readAsDataURL(input.files[0]);
  });

</script>


<!-- daily updates -->
<div id="daily" class="col-12 px-2 pt-3">
  <h2 class="section-header text-center mb-3">DAILY EVENTS</h2>

  <form action="/admin/add-event" method="post">
    <div class="mb-3">
      <input type="text" class="form-control" name="name" placeholder="Event name" required>
    </div>
    <div class="mb-3 col-12">
      <input type="datetime-local" class="form-control" name="datetime" placeholder="Event name" required>
    </div>
    <div class="mb-3">
      <textarea class="form-control" name="conditions" rows="8" placeholder="Terms and conditions" required></textarea>
    </div>
    <div class="mb-3">
      <input type="url" class="form-control" name="link" id="exampleFormControlInput1" placeholder="registration link"
        required>
    </div>
    <div class="mb-3">
      <button type="submit" class="btn btn-sm btn-primary">Add Event</button>
    </div>
  </form>

  <div class="container mb-3">
    <div class="row g-2">
      {{#each events}}

      <div class="col-6 ">
        <div class="p-2 border bg-light row m-1">
          <a href="/admin/edit-event/{{@index}}" style="text-decoration: none;">
            <h6 class="col-8">{{this.name}}</h6>
          </a>
          <a href="/admin/delete-event/{{this.name}}" class="col-2"
            onclick="return confirm('Are you really want to remove ?')"><i class="bi bi-trash3-fill"
              style="font-size: 1.4rem; color: red;"></i></a>
        </div>
      </div>

      {{/each}}
    </div>
  </div>
</div>


